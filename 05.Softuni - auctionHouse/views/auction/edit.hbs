

        <main>

            <!-- In case of error, display the following div-->
            <!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->
    {{#if error}}
    
    
    <div class="error-box">
        <p>{{error.message}}</p>
    </div>
    
    {{/if}}

    
            <!-- Edit Page -->
            <section id="create-section">

                <h1 class="item">Edit Auction</h1>

                <div class="item padded align-center">

                    <form class="layout left large" method="POST" >

                        <div class="col aligned">
                            <label>
                                <span>Title</span>
                                <input type="text" name="title" value="{{#if error}}{{data.title}}{{else}}{{currentItem.title}}{{/if}}"></label>
                            <label>
                                <span>Category</span>
                                <select name="category">
                                    <option value="estate">Real Estate</option>
                                    <option value="vehicles">Vehicles</option>
                                    <option value="furniture">Furniture</option>
                                    <option value="electronics">Electronics</option>
                                    <option value="other">Other</option>
                                </select>
                            </label>
                            <label>
                                <span>Image URL</span>
                                <input type="text" name="imageUrl" value="{{#if error}}{{data.imageUrl}}{{else}}{{currentItem.imageUrl}}{{/if}}">
                            </label>
                            <label>
                                <span>Starting price</span>

                                <!-- If the current auction has a bidder, this input field should be disabled -->
                                <input type="number" name="number" value="{{#if error}}{{data.price}}{{else}}{{currentItem.price}}{{/if}}" {{#if currentItem.bidder}} disabled {{/if}}>
                            </label>
                        </div>

                        <div class="content pad-med align-center vertical">
                            <label>
                                <span>Description</span>
                                <textarea name="description">{{#if error}}{{data.description}}{{else}}{{currentItem.description}}{{/if}}</textarea>
                            </label>

                            <div class="align-center">
                                <input class="action" type="submit" value="Update Listing">
                            </div>
                        </div>

                    </form>

                </div>

            </section>

        </main>
