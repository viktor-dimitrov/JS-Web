

        <main>

            <!-- In case of error, display the following div-->
            <!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->
{{#if error}}


<div class="error-box">
    <p>{{error.message}}</p>
</div>

{{/if}}

            <!-- Create Page -->
            <section id="create-section" class="">

                <h1 class="item">New Auction</h1>

                <div class="item padded align-center">

                    <form class="layout left large" method="POST" >

                        <div class="col aligned">
                            <label>
                                <span>Title</span>
                                <input type="text" name="title"  {{#if error}}value="{{data.title}}" {{/if}}></label>
                            <label>
                                <span>Category</span>
                                <select name="category">
                                    <option value="estate">Real Estate</option>
                                    <option value="vehicles">Vehicles</option>
                                    <option value="furniture">Furniture</option>
                                    <option value="electronics">Electronics</option>
                                    <option value="other">Other</option>
                                </select>
                            </label>
                            <label>
                                <span>Image URL</span>
                                <input type="text" name="imageUrl" {{#if error}}value="{{data.imageUrl}}" {{/if}}></label>
                            <label>
                                <span>Starting price</span>
                                <input type="number" name="price" {{#if error}}value="{{data.price}}" {{/if}}></label>
                        </div>

                        <div class="content pad-med align-center vertical">
                            <label>
                                <span>Description</span>
                                <textarea name="description">{{#if error}}{{data.description}}{{/if}}</textarea>
                            </label>

                            <div class="align-center">
                                <input class="action" type="submit" value="Publish Item">
                            </div>
                        </div>

                    </form>

                </div>

            </section>

        </main>
