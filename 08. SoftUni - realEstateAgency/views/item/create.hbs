

        {{#if error}}
        <div>
            <div class="errorContainer">
                <p>{{error.message}}</p>
            </div>
        </div>
        {{/if}}

        <main>
            <section id="create-page">
                <div class="create-container">
                    <div class="box-image"></div>

                    <h2 class="box-heading"> Add new home</h2>


                    <form class="form"  method="POST">
                        <div class="input">
                            <input type="text" class="input-field" id="home-name" placeholder="Real House Luxury Villa..." name="name" value="{{#if error}}{{data.name}}{{/if}}" />
                            <label class="home-name">Name:</label>
                        </div>
                        <div class="input">
                            <input type="text" class="input-field" id="type" placeholder="Villa..." name="type" value="{{#if error}}{{data.type}}{{/if}}" />
                            <label class="type">Property Type:</label>
                        </div>
                        <div class="input">
                            <input type="number" class="input-field" id="year" placeholder="2018..." name="year" value="{{#if error}}{{data.year}}{{/if}}" />
                            <label class="year">Year Built:</label>
                        </div>
                        <div class="input">
                            <input type="text" class="input-field" id="city" placeholder="Sofia..." name="city" value="{{#if error}}{{data.city}}{{/if}}" />
                            <label class="city">City</label>
                        </div>

                        <div class="input">
                            <input type="text" class="input-field" id="homeImage" placeholder="Image..." name="imageUrl" value="{{#if error}}{{data.imageUrl}}{{/if}}" />
                            <label class="homeImage">Home Image:</label>
                        </div>

                        <div class="input">
                            <input type="text" class="input-field" id="description" placeholder="Description..." name="description" value="{{#if error}}{{data.description}}{{/if}}" />
                            <label class="description">Property Description:</label>
                        </div>

                        <div class="input">
                            <input type="number" class="input-field" id="availablePieces" placeholder="1" name="pieces" value="" />
                            <label class="availablePieces">Available pieces:</label>
                        </div>

                        <div class="create-action">
                            <button class="create-button">Add</button>
                        </div>


                    </form>
                </div>
            </section>

        </main>








