




        <main>

    {{#if error}}
            <div class="error-box">
            <p>{{error.message}}</p>
        </div>
{{/if}}

            <section id="register-page">

                <article class="register-page-container">
                    <form  method="POST" class="register-page-form">
                        <h2>Register</h2>
                        <p>Join us and find the perfect job.</p>

                        <label for="email">Email:</label>
                        <input type="text" id="email" placeholder="petar@abv.bg" name="email" value="{{#if error}}{{data.email}}{{/if}}">

                        <label for="password">Password:</label>
                        <input type="password" id="password" placeholder="******" name="password" value="{{#if error}}{{data.password}}{{/if}}">

                        <label for="repeat-password">Repeat Password:</label>
                        <input type="password" id="repeat-password" placeholder="******" name="repassword" value="{{#if error}}{{data.repassword}}{{/if}}">

                        <label for="description">Briefly describe your skills:</label>
                        <input type="text" id="description" placeholder="Experience with HTML 5, CSS 3, Node.js" name="skills" value="{{#if error}}{{data.skills}}{{/if}}">

                        <article class="register-page-button">
                            <button class="btn-register">Register</button>
                        </article>

                        <article class="account">
                            <p>Already have an account? <a href="/login">Sign in</a></p>
                        </article>

                    </form>

                    <article class="register-page-image">
                        <!-- Do not forget to change the path to the image -->
                        <img src="/static/img/job.png" alt="image">
                    </article>
                </article>

            </section>
        </main>








