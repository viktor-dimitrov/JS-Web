






        <main>

            <section id="details-page">
                <article class="details-gage-title">
                    <h1>Details Page</h1>
                </article>
                <article class="details-page-card">

                    <article class="details-page-card-image">
                        <!-- Do not forget to change the path to the image -->
                        <img src="/static/img/man.png" alt="details-image">
                    </article>

                    <article class="details-page-card-content">
                        <p>Author: {{item.author.email}}</p>
                        <h2>Headline: {{item.headline}}</h2>
                        <h3>Company name: {{item.name}}</h3>
                        <h4>Company description: {{item.description}}</h4>
                        <h5>Location: {{item.location}}</h5>

                        <article class="details-page-card-buttons">
                            <!--only for registered users and author of the ad-->

                            {{#if isAuth }}

                                    {{#if isAuthor}}
                                           <a href="/edit/{{item._id}}/{{item.author._id}}" class="btn-edit">Edit</a>
                                           <a href="/delete/{{item._id}}/{{item.author._id}}" class="btn-delete">Delete</a>
                                    {{else}}

                                    {{#if isApplied}}
                                        <p class="already-applied">You have already applied!</p>
                                    {{else}}
                                         <a href="/apply/{{item._id}}" class="btn-apply">Apply now!</a>
                                         <p class="applied-people">Hurry up, {{item.applied.length}} people have already applied.</p>
                                    {{/if}}

                                    {{/if}}

                            {{else}}

                            {{/if}}
                            <!--<a href="#" class="btn-edit">Edit</a>
                            <a href="#" class="btn-delete">Delete</a>-->

                            <!--logged in user who did not apply for current ad-->
                            <!--<a href="#" class="btn-apply">Apply now!</a>
                            <p class="applied-people">Hurry up, 1 people have already applied.</p>-->

                            <!--logged in user who has already applied for current ad-->
                            <!--<p class="already-applied">You have already applied!</p>-->
                        </article>
                    </article>

                </article>
            </section>

            {{#if isAuthor}}

            {{#if item.applied}}

             <section id="info-about-candidates">
                <h2>Candidates for this ad:</h2>

                {{#each item.applied}}
                <article class="info-about-candidates-card">
                    <h2>Email: {{email}}</h2>
                    <h3>Description of the candidate's skills: {{skills}}</h3>
                </article>
                {{/each}}

                </section>

            {{/if}}

            {{/if}}
