

        <main>

            <!-- In case of error, display the following div--><!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->
            
            <!-- Details Page -->
            <section id="catalog-section">

                <h1 class="item">
                    {{currentItem.title}}
                </h1>
                <div class="item padded">

                    <div class="layout right large">

                        <div class="col">
                            <img src="{{currentItem.imageUrl}}" class="img-large">
                        </div>

                        <div class="content pad-med">

                            <p>In category: <strong>{{currentItem.category}}</strong></p>
                            <p>{{currentItem.description}}</p>

                            <div class="align-center">
                                <div>
                                    Current price: $<strong>{{currentItem.price}}</strong>
                                </div>

                                <!-- If current user can place a bid -->
                                {{#if isAuth}}

                                {{#if isBidder}}
                                  <div>
                                    You are currently the <strong>highest bidder</strong> for this auction
                                  </div>
                                  {{else}}
                                <form class="vertical" method="POST" action="/bid/{{currentItem._id}}">
                                    <label><span>Bid amount</span><input type="number" name="bidAmount"></label>
                                    <input class="action" type="submit" value="Place bid">
                                </form>
                                {{/if}}
                                {{/if }}

                                <!-- If current user is the bidder -->
                            

                            </div>

                        </div>
                    </div>

                    <footer>Listed by {{currentItem.author.firstName}} {{currentItem.author.lastName}}</footer>
                </div>

            </section>

        </main>

        <footer>SoftUni &copy; 2022 | Design by Viktor Kostadinov</footer>
    </div>

</body>

</html>