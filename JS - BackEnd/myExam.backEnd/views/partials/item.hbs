                <div class="card">

                    <!-- Start User Details and Image Location -->
                    <div class="top">
                        <div class="userDetails">
                            <!-- Link to User Profile Page -->
                            <a href="#" action="#" method="#">
                                <div class="profilepic">
                                    <div class="profile_img">
                                        <div class="image">
                                            <img src="/images/person.png">
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <h3>
                                <!-- Link to User Profile Page -->
                                <p>
                                    <!-- show user username -->
                                    {{author.username}}
                                </p>    
                                <!-- photo's location -->
                                <span>{{location}}</span>
                            </h3>
                        </div>
                    </div>

                    <!-- Start Pet Photo -->
                    <div class="imgBx">
                        <img src="{{imageUrl}}" alt="post" class="cover">
                    </div>
                    <!-- Name of Pet -->
                    <h5 class="petName">Name: {{name}}</h5>
                    <!-- Age of Pet -->
                    <h5 class="petAge">Age: {{age}}</h5>
                    <!-- Link to Photo Details Page -->
                    <a href="/details/{{_id}}" id="see-details">
                        <h4 class="details">See details</h4>
                    </a>
                </div>