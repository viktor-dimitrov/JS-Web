

    <section class="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{currentBook.title}}</h2>
                <h3>Author: {{currentBook.author}}</h3>
                <h3>Stars: {{currentBook.stars}}</h3>
                <h3>Genre: {{currentBook.genre}}</h3>
                <h3>Review: {{currentBook.review}}
                </h3>

                {{#if isAuth}}
                
                {{#if isOwner}} 
                <!-- Only for registered user and author of the review -->
                <div class="buttons">
                    <a href="/edit/{{currentBook._id}}/{{currentBook.owner}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{currentBook._id}}/{{currentBook.owner}}" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isWished}}
                <div class="buttons">
                <p class="wish-pub">You already added the book to your wish list</p>
                </div>
                {{else}}
                <div class="buttons">
                    <a href="/wish/{{currentBook._id}}" class="btn-wish">Wish to read</a>
                </div>
                {{/if}}
                
                {{/if}}
                <!-- logged in user who has not yet wished book-->
                {{/if}}
        

            </article>

            <article class="details-card-image">
                <img src="{{currentBook.image}}" alt="ui">
            </article>

        </article> 
    </section>
