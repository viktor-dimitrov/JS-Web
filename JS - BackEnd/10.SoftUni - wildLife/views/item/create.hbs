



        <main>

            <section id="create-page">
                <div class="createSection">
                    <div class="info">
                        <h2>Create your post, share information about wildlife.</h2>
                    </div>

                    <form method="POST" class="createForm">
                        <h2>Create Post</h2>
                        <ul class="noBullet">
                            <li>
                                <label for="title">Title:</label>
                                <input type="text" class="inputFields" id="title" placeholder="Two golden snub-nosed monkeys" name="title" value="{{#if error}}{{data.title}}{{/if}}" />
                            </li>
                            <li>
                                <label for="key-word">Keyword:</label>
                                <input type="text" class="inputFields" id="keyword" placeholder="Animal" name="keyword" value="{{#if error}}{{data.keyword}}{{/if}}" />
                            </li>
                            <li>
                                <label for="location">Location:</label>
                                <input type="text" class="inputFields" id="location" placeholder="North America" name="location" value="{{#if error}}{{data.location}}{{/if}}" />
                            </li>
                            <li>
                                <label for="date">Date of creation:</label>
                                <input type="text" class="inputFields" id="date" placeholder="18.02.2021" name="date" value="{{#if error}}{{data.date}}{{/if}}" />
                            </li>
                            <li>
                                <label for="image">Wildlife image:</label>
                                <input type="text" class="inputFields" id="image" placeholder="http:/..." name="imageUrl" value="{{#if error}}{{data.imageUrl}}{{/if}}" />
                            </li>
                            <li>
                                <label for="description">Description:</label>
                                <textarea id="description" class="inputFields" name="description" placeholder="Monkey is...">{{#if error}}{{data.description}}{{/if}}</textarea>
                            </li>
                            <li id="center-btn">
                                <button id="create-btn">Create</button>
                            </li>
                        </ul>
                    </form>

                </div>
            </section>

        </main>






