
{{#if error}}
<div class="error">
        <p>{{error.message}}</p>
       
    </div>

{{/if}}

    <main>
        <section class="py-5" id="edit-trip-page">
            <div class="container edit">
                <h1>Edit trip</h1>
                <div>
                    <form  method="POST">
                        <div class="edit-label">
                            <label for="startPoint"> <i class="fas fa-map-marker-alt"></i> Starting Point</label>
                            <label for="endPoint"> <i class="fas fa-map-marker-alt"></i> End Point</label>
                        </div>
                        <div class="form-group edit-input">
                            <input type="text" class="form-control-2" id="startPoint" name="start" value="{{#if error}}{{data.start}}{{else}}{{item.start}}{{/if}}">
                            <input type="text" class="form-control-2" id="endPoint" name="end" value="{{#if error}}{{data.end}}{{else}}{{item.end}}{{/if}}">
                        </div>
                        <div class="edit-label">
                            <label for="date"> <i class="far fa-calendar-alt"></i> Date</label>
                            <label for="time"> <i class="far fa-clock"></i> Time</label>
                        </div>
                        <div class="form-group edit-input">
                            <input type="date" class="form-control-2" id="date" name="date" value="{{#if error}}{{data.date}}{{else}}{{item.date}}{{/if}}">
                            <input type="time" class="form-control-2" id="time" name="time" value="{{#if error}}{{data.time}}{{else}}{{item.time}}{{/if}}">
                        </div>
                        <div class="edit-label">
                            <label for="carImage">Car Image</label>
                            <label for="carBrand">Car Brand</label>
                        </div>
                        <div class="form-group edit-input">
                            <input type="text" class="form-control-2" id="carImage" name="imageUrl" value="{{#if error}}{{data.imageUrl}}{{else}}{{item.imageUrl}}{{/if}}">
                            <input type="text" class="form-control-2" id="carBrand" name="brand" value="{{#if error}}{{data.brand}}{{else}}{{item.brand}}{{/if}}">
                        </div>
                        <div class="edit-label">
                            <label for="seats">Available Seats</label>
                            <label for="price">Price</label>
                        </div>
                        <div class="form-group edit-input">
                            <input type="text" class="form-control-2" id="seats" name="seats" value="{{#if error}}{{data.seats}}{{else}}{{item.seats}}{{/if}}">
                            <input type="text" class="form-control-2" id="price" name="price" value="{{#if error}}{{data.price}}{{else}}{{item.price}}{{/if}}">
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description">{{#if error}}{{data.description}}{{else}}{{item.description}}{{/if}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </section>
    </main>







 