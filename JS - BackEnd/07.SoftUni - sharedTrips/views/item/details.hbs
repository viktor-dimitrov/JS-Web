



    <main>
        <section class="py-5 details" id="trip-details-page">
            <div class="container">
                <div class="destination">
                    <div>
                        <span class="icon"><i class="fas fa-map-marked-alt"></i></span>
                        <h5> from <span>{{item.start}}</span> to <span>{{item.end}}</span> </h5>
                    </div>
                    <div>
                        <span class="icon"><i class="fas fa-calendar-alt"></i></span>
                        <h5> <span>{{item.date}}</span> at <span>{{item.time}}</span> </h5>
                    </div>
                </div>
                <p class="line"></p>
                <div class="buddies-info">
                    <i class="fas fa-users buddies"></i>
                    <h5>Shared trip Buddies</h5>
                    <div>

                        {{#if emailList}}
                        <!-- if there are joined buddies for the current trip separate them with comma and space", " -->
                        <p>{{emailList}}</p>
                        {{else}}
                        <!-- If not display: -->
                        <p>there are no buddies yet...</p>
                        
                        {{/if}}

                    </div>
                    <h5>Driver: <span>{{item.author.email}}</span> </h5>
                </div>
                <p class="line"></p>
                <h5 class="brand">Car Brand: <span class="lead">{{item.brand}}</span></h5>
                <div class="trip-info">
                    <div>
                        <img class="img-fluid rounded"
                            src="{{item.imageUrl}}"
                            alt="car-image">
                    </div>
                    <div class="trip-desc">
                        <h5>Information about the trip</h5>
                        <textarea class="lead" disabled>{{item.description}}</textarea>
                           
                        <h5>Price: <span class="lead">{{item.price}}</span> BGN</h5>

                     <!-- if there are no logged in user do not show div with class actions  -->
                     {{#if isAuth}}
                        <div class="actions">
                        
                            {{#if isAuthor}}
                            <!-- Only for logged user and creator to this trip -->
                            <a href="/delete/{{item._id}}/{{item.author._id}}" class="btn btn-danger">Delete this trip</a>
                            <a href="/edit/{{item._id}}/{{item.author._id}}" class="btn btn-warning">Edit this trip</a>
                            {{/if}}

                            {{#unless isAuthor}}

                            {{#if hasSeats}}

                            {{#unless isJoined}}
                            <!-- logged in user with available seats -->
                            <a href="" class="btn btn-join">Join now, [ {{item.seats}} ] seats left!</a>
                            {{/unless}}
                            {{else}}

                            {{#unless isJoined}}

                            {{#unless isAuthor}}
                             <!-- logged in user with no available seats -->
                                  <span class="btn btn-secondary">No seats available! [0]</span>
                                  {{/unless}}
                            {{/unless}}

                            {{/if}}

                            {{#if isJoined}}
                            <!-- logged in user and has already joined the trip  -->
                            <span class="btn btn-info">Already joined. Don't be late!</span>
                            {{/if}}

                            {{/unless}}

                        
                        </div>

                        {{/if}}


                    </div>
                </div>
            </div>
        </section>
    </main>






