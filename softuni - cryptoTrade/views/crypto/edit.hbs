        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Announcement</h1>
                <form  method="POST">
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{currentCrypto.name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{currentCrypto.image}}">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{currentCrypto.price}}">
                    <label>Description:</label>
                    <textarea name="description"
                        id="description">{{currentCrypto.description}}</textarea>
                    <label>Payment method:</label>
                    <select id="payment" name="payment">
                        {{#each paymentMethods}}
                            {{>paymentOptions}}
                        {{/each}}
                    </select>
                    <input type="submit" id="btn" value="EDIT">
                </form>
            </div>
        </section>
    </main>

  