

    <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{currentCrypto.image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{currentCrypto.name}}</h1>
                    <h3 id="payment">Payment method: {{currentCrypto.payment}}</h3>
                    <p id="price"><span>Price: ${{currentCrypto.price}}</span></p>
                    <p id="description">{{currentCrypto.description}}</p>
                </div>
                <div class="product-btn">

                    {{#if isAuth}}

                    {{#if isOwner}}
                        <a href="#" class="btn-edit">Edit</a>
                        <a href="#" class="btn-delete">Delete</a>
                        {{else}}
                        <a href="#" class="btn-buy">Buy</a>
                    {{/if}}

                    {{/if}}
