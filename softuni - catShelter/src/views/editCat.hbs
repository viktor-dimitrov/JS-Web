
    <header>
        <nav>
            <ul class="navigation">
                <li><a href="">Home Page</a></li>
                <li><a href="">Add Breed</a></li>
                <li><a href="">Add Cat</a></li>
            </ul>
        </nav>
        <h1>Cat Shelter</h1>
    </header>
    <main>
        <form action="#" method="" class="cat-form" enctype="multipart/form-data">
            <h2>Edit Cat</h2>
            <label for="name">Name</label>
            <input type="text" id="name" value="{{currCat.name}}">
            <label for="description">Description</label>
            <textarea id="description">{{currCat.description}}</textarea>
            <label for="image">Image</label>
            <input type="file" id="image">
            <label for="group">Breed</label>
            <select id="group">
                <option value="">{{currCat.breed}}</option>
                            {{#each breeds}}
                            {{>breed}}
                            {{/each}}
            </select>
            <button>Edit Cat</button>
        </form>
    </main>
