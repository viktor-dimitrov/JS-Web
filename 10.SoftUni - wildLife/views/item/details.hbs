







        <main>

            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Title: {{item.title}}</h1>
                            <h3>Created by an author: {{item.author.firstName}} {{item.author.lastName}}</h3>
                            <div class="card_animal">
                                <p class="card-keyword">Keyword: {{item.keyword}}</p>
                                <p class="card-location">Location: {{item.location}}</p>
                                <p class="card-date">Date: {{item.date}}</p>
                            </div>

                            <p class="disc">{{item.description}}</p>

                            <!-- If there is no registered user, do not display buttons-->

                            {{#if isAuth}}
                            <div class="social-btn">

                                {{#if isAuthor}}
                                <!-- Only for registered user and author of the post -->
                                <a href="/edit/{{item._id}}/{{item.author._id}}" class="edit-btn">Edit</a>
                                <a href="/delete/{{item._id}}/{{item.author._id}}" class="del-btn">Delete</a>
                                <!-- logged in users, who have not yet voted-->
                                {{else}}
                                {{#unless isVoted}}
                                <a href="/vote/{{item._id}}/up" class="vote-up">UpVote +1</a>
                                <a href="/vote/{{item._id}}/down" class="vote-down">DownVote -1</a>
                                <!-- logged in user who has already voted-->
                                {{else}}
                                <p class="thanks-for-vote">Thanks For Voting</p>
                                {{/unless}}
                                {{/if}}
                            </div>
                            {{/if}}


                        </div>
                    </div>
                    <div class="card_right">
                        <img src="{{item.imageUrl}}" alt="image">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                                
                                <p class="PV">Total rating of votes: {{#if item.votes}}{{item.rating}}{{else}}0{{/if}}</p>
                                

                        
                            </div>

                            <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->

                            {{#if item.votes}}
                            <p class="disc">People who voted for the post - {{votedList}}</p>
                            {{else}}
                            <!-- If not display: -->
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>

        </main>






