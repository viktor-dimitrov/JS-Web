




        <main>

            <section id="edit-page">
                <div class="editSection">
                    <div class="info">
                        <h2>Edit your own post!</h2>
                    </div>

                    <form  method="POST" class="editForm">
                        <h2>Edit Post</h2>
                        <ul class="noBullet">
                            <li>
                                <label for="title">Title:</label>
                                <input type="text" class="inputFields" id="title" name="title" value="{{#if error}}{{data.title}}{{else}}{{item.title}}{{/if}}" />
                            </li>
                            <li>
                                <label for="key-word">Keyword:</label>
                                <input type="text" class="inputFields" id="keyword" name="keyword" value="{{#if error}}{{data.keyword}}{{else}}{{item.keyword}}{{/if}}" />
                            </li>
                            <li>
                                <label for="location">Location:</label>
                                <input type="text" class="inputFields" id="location" name="location" value="{{#if error}}{{data.location}}{{else}}{{item.location}}{{/if}}" />
                            </li>
                            <li>
                                <label for="date">Date of creation:</label>
                                <input type="text" class="inputFields" id="date" name="date" value="{{#if error}}{{data.date}}{{else}}{{item.date}}{{/if}}" />
                            </li>
                            <li>
                                <label for="image">Wildlife image:</label>
                                <input type="text" class="inputFields" id="image" name="imageUrl" value="{{#if error}}{{data.imageUrl}}{{else}}{{item.imageUrl}}{{/if}}" />
                            </li>
                            <li>
                                <label for="description">Description:</label>
                                <textarea id="description" class="inputFields" name="description">{{#if error}}{{data.description}}{{else}}{{item.description}}{{/if}}</textarea>
                            </li>
                            <li id="center-btn">
                                <button id="edit-btn">Edit</button>
                            </li>
                        </ul>
                    </form>

                </div>
            </section>

        </main>



