




        <main>


{{#if error}}
            <div class="error-box">
            <p>{{error.message}}</p>
        </div>
{{/if}}

            <section id="create-page">

                <article class="create-page-container">
                    <form  method="POST" class="create-page-form">
                        <h2>Create an ad</h2>

                        <label for="headline">Headline:</label>
                        <input type="text" id="headline" placeholder="Front-End Developer with React" name="headline" value="{{#if error}}{{data.headline}}{{/if}}">

                        <label for="location">Location:</label>
                        <input type="text" id="location" placeholder="Ruse, Bulgaria" name="location" value="{{#if error}}{{data.location}}{{/if}}">

                        <label for="company-name">Company name:</label>
                        <input type="text" id="company-name" placeholder="Digital Solutions" name="name" value="{{#if error}}{{data.name}}{{/if}}">

                        <label for="company-description">Company description:</label>
                        <input type="text" id="company-description" placeholder="We are developing a web application" name="description" value="{{#if error}}{{data.description}}{{/if}}">

                        <article class="create-page-button">
                            <button class="btn-create">Create</button>
                        </article>
                    </form>

                    <article class="create-page-image">
                        <!-- Do not forget to change the path to the image -->
                        <img src="/static/img/job.png" alt="image">
                    </article>
                </article>

            </section>
        </main>




