


        <main>
            <section id="details-page">
                <h1>Details</h1>
                <article class="details-card">

                    <article class="details-card-text">
                        <h2>Title:<br> {{item.title}}</h2>
                        <h3>Author: {{item.author.username}}</h3>
                        <h3>Painting technique: {{item.technique}}</h3>
                        <h3>Certificate of authenticity: {{item.certificate}}</h3>

                        <!-- If there is no registered user, do not display buttons-->
                        {{#if isAuth}}
                        <div class="buttons">
                            {{#if isAuthor}}
                            <!-- Only for registered user and author of the publication -->
                            <a href="/edit/{{item._id}}/{{item.author._id}}" class="btn-edit">Edit</a>
                            <a href="/delete/{{item._id}}/{{item.author._id}}" class="btn-delete">Delete</a>
                            {{else}}
                            {{#unless isShared}}
                            <!-- logged in user who has not yet shared the publication-->
                            <a href="/share/{{item._id}}" class="btn-share">Share publication</a>
                            {{else}}
                            <!-- logged in user who has already shared the publication-->
                            <p class="shared-pub">You already shared this publication</p>
                            {{/unless}}
                            {{/if}}
                        </div>
                        {{/if}}

                    </article>

                    <article class="details-card-image">
                        <img src="{{item.imageUrl}}" alt="art-image2">
                    </article>

                </article>
            </section>
        </main>





